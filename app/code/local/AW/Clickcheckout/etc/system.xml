<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <awclickcheckout translate="label" module="awclickcheckout">
            <label>One Click Checkout</label>
            <tab>awall</tab>
            <frontend_type>text</frontend_type>
            <sort_order>914</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled for groups</label>
                            <frontend_type>multiselect</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>awclickcheckout/source_groups</source_model>
                        </enabled>
                        <methods translate="label">
                            <label>Payment methods allowed</label>
                            <frontend_type>multiselect</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>awclickcheckout/source_methods</source_model>
                        </methods>
                        <points translate="label">
                            <label>Enable points</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>This option requires Points &amp; Rewards installed and configured</comment>
                        </points>
                    </fields>
                </general>
            </groups>
        </awclickcheckout>
    </sections>
</config>
