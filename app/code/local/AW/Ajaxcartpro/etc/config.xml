<?xml version="1.0"?>
<config>
    <modules>
        <AW_Ajaxcartpro>
            <version>2.1.2</version><platform>ce</platform>
        </AW_Ajaxcartpro>
    </modules>
    <global>
        <blocks>
            <ajaxcartpro>
                <class>AW_Ajaxcartpro_Block</class>
            </ajaxcartpro>
        </blocks>
        <helpers>
            <ajaxcartpro>
                <class>AW_Ajaxcartpro_Helper</class>
            </ajaxcartpro>
        </helpers>
        <resources>
            <ajaxcartpro_setup>
                <setup>
                    <module>AW_Ajaxcartpro</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ajaxcartpro_setup>
            <ajaxcartpro_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ajaxcartpro_write>
            <ajaxcartpro_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ajaxcartpro_read>
        </resources>
        <models>
            <ajaxcartpro>
                <class>AW_Ajaxcartpro_Model</class>
            </ajaxcartpro>
        </models>
        <events>
            <checkout_cart_add_product_complete>
                <observers>
                    <ajaxcartpro_observer>
                        <type>singleton</type>
                        <class>ajaxcartpro/observer</class>
                        <method>addToCartEvent</method>
                    </ajaxcartpro_observer>
                </observers>
            </checkout_cart_add_product_complete>

            <wishlist_items_renewed>
                <observers>
                    <ajaxcartpro_observer>
                        <type>singleton</type>
                        <class>ajaxcartpro/observer</class>
                        <method>addToCartEvent</method>
                    </ajaxcartpro_observer>
                </observers>
            </wishlist_items_renewed>
        </events>
    </global>
    <frontend>
        <routers>
            <ajaxcartpro>
                <use>standard</use>
                <args>
                    <module>AW_Ajaxcartpro</module>
                    <frontName>ajaxcartpro</frontName>
                </args>
            </ajaxcartpro>
        </routers>
        <layout>
            <updates>
                <AW_Ajaxcartpro module="AW_Ajaxcartpro">
                    <file>ajaxcartpro.xml</file>
                </AW_Ajaxcartpro>
            </updates>
        </layout>
        <translate>
            <modules>
                <AW_Ajaxcartpro>
                    <files>
                        <default>AW_Ajaxcartpro.csv</default>
                    </files>
                </AW_Ajaxcartpro>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <ajaxcartpro>
                                            <title>aheadWorks - AJAX Cart Pro</title>
                                        </ajaxcartpro>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <translate>
            <modules>
                <AW_Ajaxcartpro>
                    <files>
                        <default>AW_Ajaxcartpro.csv</default>
                    </files>
                </AW_Ajaxcartpro>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <ajaxcartpro>
            <general>
                <progressanimation>center</progressanimation>
                <cartanimation>opacity</cartanimation>
                <confirmation>1</confirmation>
            </general>
        </ajaxcartpro>
    </default>
</config>
